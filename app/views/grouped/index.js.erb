var row = $('#add_student');
var html_new_student = "<%= escape_javascript(render('form')) %>";
row.html(html_new_student);

$('#fileselectbutton').click(function(e){
  $('#file').trigger('click');
});

$('#file').change(function(e){
  var val = $(this).val();
  var file = val.split(/[\\/]/);
  $('#filename').val(file[file.length-1]);
});

$('#upload_tooltip').tooltip();