<script>
$(function() {
  $("table").sortable({
    items: 'tbody > tr',
    cursor: 'crosshair',
    connectWith: 'table',
    dropOnEmpty: true,
    receive: function(e, ui){
      $(this).find("tbody").append(ui.item);   
    }
  });
});
</script>

<div class="container">

<h1><%= @current_course.name %></h1>
<div >
    <%= form_tag('/class/sorted') do %>
      <%= submit_tag 'View List', class: "btn" %>
    <% end %>
  	</div>
<% for i in 1..@groups 
    if i%2 == 1 %>

    <div class="row">
  <% end%>

    <div class="col-md-6">
      <h3>Group <%= i %></h3>
      <table class="table">
      <thead>
        <tr>

          <% for j in @start_column..@end_column %>
            <th><%= @header[j] %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @student_list[i-1].each do |student| %>
          <tr>
            <% for j in @start_column..@end_column %>
              <td><%= student[j] %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  <% if i%2 == 0 %>
    </div>
  <% end%>
<% end %>

  <% if @groups%2 == 1 %>
    </div>
  <% end %>
</div>