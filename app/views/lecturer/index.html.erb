<div class="container">
  <!-- List of courses this lecture teaches -->
  <h1>Classes</h1>
  <div class="row" style="padding-bottom: 1em; width: 300px">
    <div class="col-sm-10"><%= select_tag "View", "<option>Current &amp; Future</option><option>Current</option><option>Custom</option>".html_safe, class: "form-control input-sm" %></div>
    </div>
    <table class="table">
    <tr>
      <th>Course name</th>
      <th>Number of students</th>
      <th>Study Period</th>
      <th>Grouped</th>
      <th>Tools</th>
    </tr>

  <% if @courses != nil && @courses.count > 0 %>
       <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, controller: "class", action: "show", id: course.name %></td>
            <td>100</td>
            <td>1 Jan 1991 - 2 Jan 1991</td>
            <td>No</td>
            <td><%= link_to "Delete", '#', {data: {confirm: "Are you sure you want to delete #{course.name}?"}} %> <a href="#">Edit</a></td>
          </tr>
        <% end %>
    <% end %>
    </table>
    <div id="add_class">
      <%= button_to("Add a class", '/lecturer', {class: "btn btn-default", id: "add_class", remote: true}) %>
    </div>
</div>