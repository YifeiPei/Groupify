<div class="container">
  <!-- List of courses this lecture teaches -->
  <h1>Classes</h1>
  <div class="row" style="padding-bottom: 1em; width: 300px">
    <div class="col-sm-10"><%= select_tag "View", "<option>Current &amp; Future</option><option>Current</option><option>Custom</option>".html_safe, class: "form-control input-sm" %></div>
    </div>
    <table class="table">
    <tr>
      <th>Course name</th>
      <th>Number of students</th>
      <th>Study Period</th>
      <th>Grouped</th>
      <th>Tools</th>
    </tr>

  <% if @courses != nil && @courses.count > 0 %>
       <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, controller: "class", action: "show", id: course.id %></td>
            <td> <%= Student.find(:all, :conditions => {:course_id => course.id}).count  %></td>
            <td>Semester 1, 2014</td>
            <td>
            <% if course.grouped %>
            	Yes
            <% else %>
            	No
            <% end %>
            
            </td>
            <td><%= link_to "Delete", {controller: "lecturer", action: "delete" , id: course.id}, {data:{confirm: "You have students in this class. \nAre you sure you want to delete #{course.name}?"}} %>
             <a href="#">Edit</a></td>
          </tr>
        <% end %>
    <% end %>
    </table>
    <div id="add_class">
      <%= button_to("Add a class", '/lecturer', {class: "btn btn-default", id: "add_class", remote: true}) %>
    </div>
</div>